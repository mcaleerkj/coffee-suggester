# Database
# For local development (SQLite)
DATABASE_URL="file:./dev.db"

# For production (PostgreSQL) - uncomment and configure
# DATABASE_URL="postgresql://user:password@localhost:5432/coffee_suggester?schema=public"

# Admin Dashboard
# Set a secure password to access the /admin dashboard
ADMIN_PASSWORD="your-secure-password-here"

# Optional: Google Places API (for cafe suggestions)
# If not set, the app uses OpenStreetMap/Overpass API (free, no key required)
# GOOGLE_PLACES_API_KEY=""

# Optional: App URL for generating share links
# In production, set this to your deployed URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: Rate limiting (requests per minute for cafe search)
CAFE_SEARCH_RATE_LIMIT="30"

# Optional: Cache duration for cafe searches (in seconds)
CAFE_CACHE_DURATION="3600"
